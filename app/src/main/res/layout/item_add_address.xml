<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_upload_choose_options"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/item_add_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/item_add_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="13sp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/item_add_address_title"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/item_add_address_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:background="@color/product_location_color"
            app:layout_constraintTop_toTopOf="@id/item_add_address_delete"
            app:layout_constraintBottom_toBottomOf="@id/item_add_address_delete"
            app:layout_constraintRight_toLeftOf="@id/item_add_address_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:textSize="13sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/item_add_address_delete"
            app:layout_constraintBottom_toBottomOf="@id/item_add_address_delete"
            app:layout_constraintRight_toLeftOf="@id/item_add_address_divider" />

        <TextView
            android:id="@+id/item_add_address_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 서울구 서울동 서울로 1"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/item_add_address_title"
            app:layout_constraintStart_toStartOf="@id/item_add_address_title" />

        <TextView
            android:id="@+id/item_add_address_detail_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="345"
            android:textSize="14sp"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="@id/item_add_address_addr"
            app:layout_constraintLeft_toRightOf="@id/item_add_address_addr" />

        <TextView
            android:id="@+id/item_add_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01000000000"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/item_add_address_addr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_add_address_addr" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>