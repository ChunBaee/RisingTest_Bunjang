<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/item_main_category_img"
            android:layout_width="33dp"
            android:layout_height="33dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_main_category_title"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/item_main_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="엔씨티 (NCT)"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/item_main_category_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>