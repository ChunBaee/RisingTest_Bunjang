<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/category_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="롱패딩"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@id/category_img"
            app:layout_constraintBottom_toBottomOf="@id/category_img"
            app:layout_constraintLeft_toRightOf="@id/category_img" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/icon_next"
            app:tint="#C2C2C2"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/login_user_edittext_unfocused_tint" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>