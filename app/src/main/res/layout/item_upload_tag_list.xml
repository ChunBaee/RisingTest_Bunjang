<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#123"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <View
            android:id="@+id/item_tag_divider"
            android:layout_width="2dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/item_tag_title"
            app:layout_constraintBottom_toBottomOf="@id/item_tag_title"
            android:background="@color/product_location_color"
            app:layout_constraintLeft_toRightOf="@id/item_tag_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>