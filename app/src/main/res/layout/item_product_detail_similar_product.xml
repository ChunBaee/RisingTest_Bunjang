<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp">

        <ImageView
            android:id="@+id/product_other_product_photo"
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/product_other_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,000"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/product_other_product_photo"
            app:layout_constraintStart_toStartOf="@id/product_other_product_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            app:layout_constraintBottom_toBottomOf="@id/product_other_product_price"
            app:layout_constraintLeft_toRightOf="@id/product_other_product_price" />

        <TextView
            android:id="@+id/product_other_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="에어팟 프로"
            android:textSize="13sp"
            android:textColor="#63626D"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="@id/product_other_product_photo"
            app:layout_constraintTop_toBottomOf="@id/product_other_product_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>